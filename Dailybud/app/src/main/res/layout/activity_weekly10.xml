<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
         android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Monthly Expense"
            android:textAlignment="center"
            android:textSize="30sp"
            android:id="@+id/heading" />
        <TextView
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="Amount Available"
            android:layout_below="@id/heading"
            android:id="@+id/one"
            android:padding="10dp"
            android:textSize="20sp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/one"
            android:layout_below="@id/heading"
            android:hint="Amount"
            android:id="@+id/e1" />
        <TextView
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="1.Gas"
            android:layout_below="@id/one"
            android:id="@+id/two"
            android:padding="10dp"
            android:textSize="20sp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/two"
            android:layout_below="@id/one"
            android:id="@+id/e2" />
        <TextView
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="2.Education"
            android:layout_below="@id/two"
            android:id="@+id/three"
            android:padding="10dp"
            android:textSize="20sp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/three"
            android:layout_below="@id/two"
            android:id="@+id/e3" />
        <TextView
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="3.Electricity"
            android:layout_below="@id/three"
            android:id="@+id/four"
            android:padding="10dp"
            android:textSize="20sp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/four"
            android:layout_below="@id/three"
            android:id="@+id/e4" />
        <TextView
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="4.House Rent"
            android:layout_below="@id/four"
            android:id="@+id/five"
            android:padding="10dp"
            android:textSize="20sp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/five"
            android:layout_below="@id/four"
            android:id="@+id/e5" />
        <TextView
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="5.Loan/Insurance"
            android:layout_below="@id/five"
            android:id="@+id/six"
            android:padding="10dp"
            android:textSize="20sp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/six"
            android:layout_below="@id/five"
            android:id="@+id/e6" />        <TextView
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="6.Hospital/Medicine"
            android:layout_below="@id/six"
            android:id="@+id/seven"
            android:padding="10dp"
            android:textSize="20sp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/seven"
            android:layout_below="@id/six"
            android:id="@+id/e7" />        <TextView
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="7.Others"
            android:layout_below="@id/seven"
            android:id="@+id/eight"
            android:padding="10dp"
            android:textSize="20sp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/eight"
            android:layout_below="@id/seven"
            android:id="@+id/e8" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total"
            android:textAlignment="center"
            android:layout_below="@id/eight"
            android:id="@+id/bt1"
            android:padding="10dp"
            android:textSize="20sp"
            android:layout_marginLeft="50dp"
            android:onClick="onClick" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/bt1"
            android:layout_below="@id/eight"
            android:hint="Amount"
            android:textSize="20dp"
            android:layout_marginLeft="100dp"
            android:id="@+id/rt1" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Balance"
            android:textAlignment="center"
            android:layout_below="@id/bt1"
            android:id="@+id/bt2"
            android:padding="10dp"
            android:layout_marginLeft="50dp"
            android:textSize="20sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/bt2"
            android:layout_below="@id/bt1"
            android:textSize="20dp"
            android:layout_marginLeft="80dp"
            android:hint="Amount"
            android:id="@+id/rt2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:layout_marginLeft="100dp"
            android:layout_below="@+id/bt2"
            android:layout_toEndOf="@+id/bt2"
            android:layout_marginStart="40dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/but11"
            android:text="Save"
            android:layout_marginLeft="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/eight"
            android:layout_marginEnd="37dp" />

    </RelativeLayout>

</ScrollView>